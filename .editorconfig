# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
insert_final_newline = true
max_line_length = 90
trim_trailing_whitespace = true

[*.{md,mdx}]
trim_trailing_whitespace = false
